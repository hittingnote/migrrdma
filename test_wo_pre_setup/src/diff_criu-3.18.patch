+				return -1;
+			}
+			else if(child_pid == 0) {
+				char fname[128];
+				int fd_to_proc;
+
+				notify_partners_suspend(pid_list[i]);
+
+				sprintf(fname, "/proc/rdma/%d/to_proc", pid_list[i]);
+				fd_to_proc = open(fname, O_RDWR);
