+		err_info("Failed to dump_rdma\n");
+		return num_child;
+	}
+
+	for(i = 0; i < num_child; i++) {
+		err = dump_rdma(pid_list[i], argv[2], &migr_dest_addr);
+		if(err < 0) {
+			err_info("Failed to dump_rdma\n");
+			return err;
+		}
+	}
+
+	return 0;
